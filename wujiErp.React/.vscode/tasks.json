{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "yarn: install",
            "type": "shell",
            "command": "yarn"
        },
        {
            "label": "yarn: dev",
            "type": "shell",
            "command": "yarn && yarn dev"
        },
        {
            "label": "yarn: build",
            "type": "shell",
            "command": "yarn && yarn build"
        },
        {
            "label": "yarn: start",
            "type": "shell",
            "command": "yarn && yarn build && yarn preview"
        }
    ]
}