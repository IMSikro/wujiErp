{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/wujiErp.Web/wujiErp.Web.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/wujiErp.Web/wujiErp.Web.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "dotnet_publish",
            "type": "shell",
            "command": "cd ./wujiErp.Web && rm -r -fo ./publish/wuji && dotnet publish wujiErp.Web.csproj -c Release -o publish/wuji/"
        },
        {
            "label": "dotnet_run",
            "type": "shell",
            "command": "cd ./wujiErp.Web/publish/wuji/ && dotnet wujiErp.Web.dll"
        },
        {
            "label": "yarn: install",
            "type": "shell",
            "command": "cd ./wujiErp.React && yarn"
        },
        {
            "label": "yarn: dev",
            "type": "shell",
            "command": "cd ./wujiErp.React && yarn && yarn dev"
        },
        {
            "label": "yarn: build",
            "type": "shell",
            "command": "cd ./wujiErp.React && yarn && yarn build"
        },
        {
            "label": "yarn: copy",
            "type": "shell",
            "command": "cp -r -fo ${workspaceFolder}/wujiErp.React/build/* ${workspaceFolder}/wujiErp.Web/publish/wuji/wwwroot/"
        },
        {
            "label": "yarn: build&copy",
            "type": "shell",
            "command": "cd ./wujiErp.React && yarn && yarn build && cp -r -fo ${workspaceFolder}/wujiErp.React/build/* ${workspaceFolder}/wujiErp.Web/publish/wuji/wwwroot/"
        },
        {
            "label": "yarn: start",
            "type": "shell",
            "command": "cd ./wujiErp.React && yarn && yarn build && yarn preview"
        }
    ]
}